}

/* Btn */
.share-btn {
  margin-top: 20px;
  margin-bottom: 20px;
}







.container{
  width:100px;
	height:200px;
	margin:0px auto;
}

.wagon-pin image{
  position: relative;
	width: 90px;
	height: 90px;
	top: 20px;
  left: 4px;
  opacity: 0.7;
	animation: wagon-rebond ease 2s infinite;
}


.shadow{
  position: relative;
	height:16px;
	background: #999;
	opacity:0.1;
	border-radius:100%;
	margin:0px 0px 0px 0px;
	top:100px;
	animation: shadow ease 2s infinite;
}


@keyframes wagon-rebond { 50% { top: 100px; opacity: 1; } 100% { top: 20px; opacity: 0.7 scale(2); } }


@keyframes shadow { 50% { margin:0px 20% 0px 20%; opacity:0.7; } 100% { margin:0px 0px 0px 0px; opacity:0.1;  } }